{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "dist",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ]
}
